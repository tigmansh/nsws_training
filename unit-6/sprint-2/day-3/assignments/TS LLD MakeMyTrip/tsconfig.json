{
    "exclude": [
        "**/*.spec.ts",
        "node_modules",
    ],
    "compilerOptions": {
        "target": "ES2019",
        "module": "ES6",
        "outDir": "./Dist",
        "strict": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": [
            "es6",
            "dom"
        ],
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
      }
}